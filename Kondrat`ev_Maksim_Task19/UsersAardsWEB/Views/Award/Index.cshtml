@model IEnumerable<Entities.Award>

@{
    ViewBag.Title = "Index";
}

<h2>Список наград</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AwardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwardDescription)
            </td>
            <td>
                @Html.ActionLink("Править", "Edit", new { id = item.AwardId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.AwardId })
            </td>
        </tr>
    }

</table>
